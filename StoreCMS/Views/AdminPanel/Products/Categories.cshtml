@model CategoryPage[]
@inject IProductsLocalization localization
@{
    Layout = "CommonPage";
    Context.Items["PageStyle"] = "/styles/admin_panel/products/categories.css";
    User user = Context.Items["User"] as User;
}
<table>
    <tr>
        <td>@Html.Raw(localization.Name)</td>
    </tr>
    @foreach (var category in Model)
    {
    <tr>
        <td><a href="@Context.Request.Path?pageID=@((int)AdminPanelPages.ShowCategoryProducts)&itemID=@category.ID">@Html.Raw(category.BreadcrumbName)<b> (ID@(category.ID))</b></a></td>
    </tr>
    }
</table>